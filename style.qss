PollutantCard {
  border: 2px solid gray;
  border-radius: 10px;
  margin-top: 10px;
  padding: 5px;
  font-weight: bold;
  font-size: 14px;
  color: black;
  background-color: white;
}

PollutantCard QLabel {
  color: black;
}

PollutantCard[complianceLevel="high"] {
  border: 2px solid green;
  color: green;
}

PollutantCard[complianceLevel="medium"] {
  border: 2px solid orange;
  color: orange;
}

PollutantCard[complianceLevel="low"] {
  border: 2px solid red;
  color: red;
}
